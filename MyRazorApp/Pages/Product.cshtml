<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="Product.aspx.cs" Inherits="MyWebApp.Product" %>

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <title>Product Management</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <form id="form1" runat="server">
        <h2>Product Management</h2>

        <!-- Button to Open Add Product Modal -->
        <div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addProductModal">Add New Product</button>
        </div>

        <h3>Product List</h3>

        <!-- Product Table -->
        <asp:GridView ID="ProductGridView" runat="server" CssClass="table" AutoGenerateColumns="False">
            <Columns>
                <asp:BoundField DataField="Name" HeaderText="Name" />
                <asp:BoundField DataField="StockQuantity" HeaderText="Stock Quantity" />
                <asp:BoundField DataField="UnitPrice" HeaderText="Unit Price" DataFormatString="{0:C}" />
                <asp:BoundField DataField="TotalPrice" HeaderText="Total Price" DataFormatString="{0:C}" />
                <asp:BoundField DataField="Storeroom" HeaderText="Storeroom" />
                <asp:TemplateField HeaderText="Actions">
                    <ItemTemplate>
                        <button class="btn btn-info" data-toggle="modal" data-target="#updateProductModal"
                                data-id='<%# Eval("Id") %>' data-name='<%# Eval("Name") %>' 
                                data-quantity='<%# Eval("StockQuantity") %>' data-price='<%# Eval("UnitPrice") %>'>Edit</button>
                        <asp:Button ID="DeleteButton" runat="server" Text="Delete" CssClass="btn btn-danger"
                                    CommandName="Delete" CommandArgument='<%# Eval("Id") %>' 
                                    OnClientClick="return confirm('Are you sure you want to delete this product?');" />
                    </ItemTemplate>
                </asp:TemplateField>
            </Columns>
        </asp:GridView>

        <!-- Modal for Add Product -->
        <div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="addProductModalLabel">Add New Product</h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <asp:TextBox ID="AddProductName" runat="server" CssClass="form-control" Placeholder="Enter product name" />
                        <asp:TextBox ID="AddStockQuantity" runat="server" CssClass="form-control" Placeholder="Enter stock quantity" TextMode="Number" />
                        <asp:TextBox ID="AddUnitPrice" runat="server" CssClass="form-control" Placeholder="Enter unit price" TextMode="Number" />
                        <asp:TextBox ID="AddStoreroom" runat="server" CssClass="form-control" Placeholder="Enter storeroom ID" TextMode="Number" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <asp:Button ID="AddProductButton" runat="server" CssClass="btn btn-primary" Text="Add Product" OnClick="AddProductButton_Click" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal for Update Product -->
        <div class="modal fade" id="updateProductModal" tabindex="-1" role="dialog" aria-labelledby="updateProductModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-info text-white">
                        <h5 class="modal-title" id="updateProductModalLabel">Update Product</h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <asp:TextBox ID="UpdateProductId" runat="server" CssClass="form-control" Placeholder="Enter updated product ID" ReadOnly="True" />
                        <asp:TextBox ID="UpdateProductName" runat="server" CssClass="form-control" Placeholder="Enter updated product name" />
                        <asp:TextBox ID="UpdateStockQuantity" runat="server" CssClass="form-control" Placeholder="Enter updated stock quantity" TextMode="Number" />
                        <asp:TextBox ID="UpdateUnitPrice" runat="server" CssClass="form-control" Placeholder="Enter updated unit price" TextMode="Number" />
                        <asp:TextBox ID="UpdateStoreroom" runat="server" CssClass="form-control" Placeholder="Enter updated storeroom ID" TextMode="Number" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <asp:Button ID="UpdateProductButton" runat="server" CssClass="btn btn-info" Text="Update Product" OnClick="UpdateProductButton_Click" />
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
