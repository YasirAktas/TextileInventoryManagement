@page
@model MyRazorApp.Pages.ProductModel
@{
    ViewData["Title"] = "Product";
}

<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Your content -->

    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>


<h2>Product Management</h2>

<!-- Button to Open Add Product Form -->
<div>
    <button class="btn btn-primary" data-toggle="modal" data-target="#addProductModal">Add New Product</button>
</div>

<h3>Product List</h3>

<!-- Product Table -->
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Stock Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <th>Storeroom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.StockQuantity</td>
                <td>@product.UnitPrice</td>
                <td>@(product.UnitPrice * product.StockQuantity)</td>
                <td>@product.Storeroom</td>
                <td>
                    <!-- Button to Open Update Product Form -->
                    <button class="btn btn-info" data-toggle="modal" data-target="#updateProductModal"
                        data-id="@product.Id" data-name="@product.Name" data-quantity="@product.StockQuantity" data-price="@product.UnitPrice">Edit</button>

                    <!-- Delete Product Button -->
                    <form method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" name="action" value="delete" formaction="@Url.Page("Product", new { action = "Delete", id = product.Id })"
                            onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal for Add Product -->
<div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addProductModalLabel">Add New Product</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <input type="hidden" name="action" value="add" />
                    <div class="form-group">
                        <label for="UpdateName"><strong>Product ID</strong></label>
                        <input type="Text" class="form-control" id="UpdateProductId" name="ProductId" placeholder="Enter updated product ID" required />
                    </div>
                    <div class="form-group">
                        <label for="Name"><strong>Product Name</strong></label>
                        <input type="text" class="form-control" id="Name" name="Product.Name" placeholder="Enter product name" required />
                    </div>
                    <div class="form-group">
                        <label for="StockQuantity"><strong>Stock Quantity</strong></label>
                        <input type="number" class="form-control" id="StockQuantity" name="Product.StockQuantity" placeholder="Enter stock quantity" required />
                    </div>
                    <div class="form-group">
                        <label for="Storeroom"><strong>Storeroom</strong></label>
                        <input type="number" class="form-control" id="Storeroom" name="Product.Storeroom" placeholder="Enter Storeroom ID" required />
                    </div>
                    <div class="form-group">
                        <label for="UnitPrice"><strong>Unit Price</strong></label>
                        <input type="number" class="form-control" id="UnitPrice" name="Product.UnitPrice" placeholder="Enter unit price" required />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Product</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal for Update Product -->
<div class="modal fade" id="updateProductModal" tabindex="-1" role="dialog" aria-labelledby="updateProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="updateProductModalLabel">Update Product</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="UpdateName"><strong>Product ID</strong></label>
                        <input type="Text" class="form-control" id="UpdateProductId" name="ProductId" placeholder="Enter updated product ID" required />
                    </div>
                    <div class="form-group">
                        <label for="UpdateName"><strong>Product Name</strong></label>
                        <input type="text" class="form-control" id="UpdateName" name="Name" placeholder="Enter updated product name" required />
                    </div>
                    <div class="form-group">
                        <label for="UpdateStockQuantity"><strong>Stock Quantity</strong></label>
                        <input type="number" class="form-control" id="UpdateStockQuantity" name="StockQuantity" placeholder="Enter updated stock quantity" required />
                    </div>
                    <div class="form-group">
                        <label for="Storeroom"><strong>Storeroom</strong></label>
                        <input type="number" class="form-control" id="Storeroom" name="Storeroom" placeholder="Enter Storeroom ID" required />
                    </div>
                    <div class="form-group">
                        <label for="UpdateUnitPrice"><strong>Unit Price</strong></label>
                        <input type="number" class="form-control" id="UpdateUnitPrice" name="UnitPrice" placeholder="Enter updated unit price" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-info">Update Product</button>
                </div>
            </form>
        </div>
    </div>
</div>
