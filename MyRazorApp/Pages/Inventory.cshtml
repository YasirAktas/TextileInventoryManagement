@page
@model MyRazorApp.Pages.InventoryModel
@{
    ViewData["Title"] = "Inventory Management";
}
<!-- Bootstrap CSS -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>


<div class="container">
    <h1 class="text-center">Textile Inventory Management System</h1>
<div>
    <button class="btn btn-primary" data-toggle="modal" data-target="#addStoreroomModal">Add New Storeroom</button>
</div>

    <div class="row mt-4">
        <!-- Storeroom 1 Table -->
        <div class="col-md-4">
            <div class="card text-white bg-secondary">
                <div class="card-body text-center">
                    <h5 class="card-title">Storeroom 1</h5>
                    <table class="table">
                        <thead>
                            <tr class="text-white">
                                <th>Product Name</th>
                                <th>Stock Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Storeroom1Products)
                            {
                                <tr class="text-white">
                                    <td>@product.Name</td>
                                    <td>@product.StockQuantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Storeroom 2 Table -->
        <div class="col-md-4">
            <div class="card text-white bg-secondary">
                <div class="card-body text-center">
                    <h5 class="card-title">Storeroom 2</h5>
                    <table class="table">
                        <thead>
                            <tr class="text-white">
                                <th>Product Name</th>
                                <th>Stock Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Storeroom2Products)
                            {
                                <tr class="text-white">
                                    <td>@product.Name</td>
                                    <td>@product.StockQuantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Storeroom 3 Table -->
        <div class="col-md-4">
            <div class="card text-white bg-secondary">
                <div class="card-body text-center">
                    <h5 class="card-title">Storeroom 3</h5>
                    <table class="table">
                        <thead>
                            <tr class="text-white">
                                <th>Product Name</th>
                                <th>Stock Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Storeroom3Products)
                            {
                                <tr class="text-white">
                                    <td>@product.Name</td>
                                    <td>@product.StockQuantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <h3 class=>Product Color View</h3>
<!-- Dropdowns for filtering -->
        <form method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="productNameFilter">Filter by Product Name:</label>
                    <select id="productName" class="form-control" name="SelectedProductName" onchange="this.form.submit()">
                        <option value="">-- Select Product --</option>
                        @foreach (var product in Model.ProductColors.DistinctBy(p => p.ProductName))
                        {
                            bool isSelected = product.ProductName == Model.SelectedProductName;
                            <option value="@product.ProductName" selected="@(isSelected ? "selected" : null)">@product.ProductName</option>
                        }
                    </select>
                </div>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age Group</th>
                    <th>Color</th>
                    <th>Quantity</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.ProductColors)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.AgeGroup</td>
                        <td>@product.Color</td>
                        <td>@product.Quantity</td>
                        @* <td> *@
                            @* <!-- Button to Open Update Product Form -->
                            <input type="hidden" name="ProductId" value="@product.Id"/>
                            <button class="btn btn-info" data-toggle="modal" data-target="#updateProductModal" name="action" value="addColor"
                            data-id="@product.Id">Add Color</button>

                            <!-- Delete Product Button -->
                            <form method="post" style="display:inline;">
                                <input type="hidden" name="ProductId" value="@product.Id"/>
                                <button type="submit" class="btn btn-danger" name="action" value="delete" formaction="@Url.Page("Product", new { action = "Delete", id = product.Id })"
                                    onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                            </form> *@
                        @* </td> *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</div>

<!-- Modal for Add Sale -->
<div class="modal fade" id="addStoreroomModal" tabindex="-1" role="dialog" aria-labelledby="addStoreroomModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addStoreroomModalLabel">Add New Storeroom</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Name"><strong>Storeroom</strong></label>
                        <input type="String" class="form-control" id="Quantity" name="StoreroomName" placeholder="Enter Name" required />
                    </div>                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Storeroom</button>
                </div>
            </form>
        </div>
    </div>
</div>

