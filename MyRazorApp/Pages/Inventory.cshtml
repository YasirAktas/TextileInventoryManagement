@page
@model MyRazorApp.Pages.InventoryModel
@{
    ViewData["Title"] = "Inventory Management";
}

<div class="container">
    <h1 class="text-center">Textile Inventory Management System</h1>
    <div class="row mt-4">
        <!-- Storeroom 1 Table -->
        <div class="col-md-4">
            <div class="card text-white bg-secondary">
                <div class="card-body text-center">
                    <h5 class="card-title">Storeroom 1</h5>
                    <table class="table">
                        <thead>
                            <tr class="text-white">
                                <th>Product Name</th>
                                <th>Stock Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Storeroom1Products)
                            {
                                <tr class="text-white">
                                    <td>@product.Name</td>
                                    <td>@product.StockQuantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Storeroom 2 Table -->
        <div class="col-md-4">
            <div class="card text-white bg-secondary">
                <div class="card-body text-center">
                    <h5 class="card-title">Storeroom 2</h5>
                    <table class="table">
                        <thead>
                            <tr class="text-white">
                                <th>Product Name</th>
                                <th>Stock Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Storeroom2Products)
                            {
                                <tr class="text-white">
                                    <td>@product.Name</td>
                                    <td>@product.StockQuantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Storeroom 3 Table -->
        <div class="col-md-4">
            <div class="card text-white bg-secondary">
                <div class="card-body text-center">
                    <h5 class="card-title">Storeroom 3</h5>
                    <table class="table">
                        <thead>
                            <tr class="text-white">
                                <th>Product Name</th>
                                <th>Stock Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Storeroom3Products)
                            {
                                <tr class="text-white">
                                    <td>@product.Name</td>
                                    <td>@product.StockQuantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <h3 class=>Product Color View</h3>
<!-- Dropdowns for filtering -->
        <form method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="productNameFilter">Filter by Product Name:</label>
                    <select id="productName" class="form-control" name="productName" onchange="this.form.submit()">
                        <option value="@Model.SelectedProductName">@Model.SelectedProductName</option>
                        @foreach (var product in Model.ProductColors.DistinctBy(p => p.ProductName))
                        {
                            if (product.ProductName == Model.SelectedProductName)
                            {
                                <text>
                                    <option value="@product.ProductName" selected>@product.ProductName</option>
                                </text>
                            }
                            else
                            {
                                <text>
                                    <option value="@product.ProductName">@product.ProductName</option>
                                </text>
                            }
                        }
                    </select>
                </div>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age Group</th>
                    <th>Color</th>
                    <th>Quantity</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.ProductColors)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.AgeGroup</td>
                        <td>@product.Color</td>
                        <td>@product.Quantity</td>
                        @* <td> *@
                            @* <!-- Button to Open Update Product Form -->
                            <input type="hidden" name="ProductId" value="@product.Id"/>
                            <button class="btn btn-info" data-toggle="modal" data-target="#updateProductModal" name="action" value="addColor"
                            data-id="@product.Id">Add Color</button>

                            <!-- Delete Product Button -->
                            <form method="post" style="display:inline;">
                                <input type="hidden" name="ProductId" value="@product.Id"/>
                                <button type="submit" class="btn btn-danger" name="action" value="delete" formaction="@Url.Page("Product", new { action = "Delete", id = product.Id })"
                                    onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                            </form> *@
                        @* </td> *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
