<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Textile Inventory Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyRazorApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark text-white mb-3 justify-content-around">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index">Textile Inventory</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-around">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Products" ? "active" : "")" asp-area="" asp-page="/Product">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Inventory" ? "active" : "")" asp-area="" asp-page="/Inventory">Inventory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Sales" ? "active" : "")" asp-area="" asp-page="/Sales">Sales</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports" ? "active" : "")" asp-area="" asp-page="/Reports">Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Storerooms" ? "active" : "")" asp-area="" asp-page="/Storerooms">Storerooms</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <p>&copy; 2024 Textile Inventory Management System. All rights reserved.</p>
            <a class="text-white" asp-area="" asp-page="/Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
